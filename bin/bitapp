#!/usr/bin/php
<?php
function findAutoloader($paths){
foreach($paths as $path){
    $vendorPath=__DIR__.$path;
    $autoloaderPath=$vendorPath."/autoload.php";
    if (file_exists($autoloaderPath)){
       require_once $autoloaderPath;
       if (!defined('VENDOR_PATH')){
            define('VENDOR_PATH', $vendorPath);
       }
       return true;
    }
 }

 return false;
}

if (!findAutoloader(array('/../vendor', '/../../..'))) {
    die(
        'You must set up the project dependencies, run the following commands:'.PHP_EOL.
        'curl -s http://getcomposer.org/installer | php'.PHP_EOL.
        'php composer.phar install'.PHP_EOL
    );
}

use Nonlux\BitApp\Console\Application;

$console = new Application(VENDOR_PATH);
$console->run();
